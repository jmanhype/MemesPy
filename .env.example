# Application Settings
APP_NAME=DSPy Meme Generator
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Settings
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dspy_meme
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800
DATABASE_ECHO=false

# Cache Settings
CACHE_URL=redis://localhost:6379/0
CACHE_PREFIX=dspy_meme:
CACHE_TTL=3600
CACHE_MAX_CONNECTIONS=10

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_CORS_ORIGINS=["http://localhost:3000"]
API_PREFIX=/api/v1
API_DOCS_URL=/docs

# DSPy Settings
DSPY_MODEL_NAME=gpt-4
DSPY_TEMPERATURE=0.7
DSPY_MAX_TOKENS=1000
DSPY_RETRY_ATTEMPTS=3
DSPY_RETRY_DELAY=1

# Image Generation Settings
IMAGE_PROVIDER=openai
IMAGE_API_KEY=your-api-key-here
IMAGE_DEFAULT_SIZE=1024x1024
IMAGE_DEFAULT_QUALITY=standard
IMAGE_MAX_BATCH_SIZE=4

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600
REDIS_PREFIX=dspy_meme:

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-org-id-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048

# Logging Configuration
LOG_JSON_FORMAT=true
LOG_FILE_PATH=logs/app.log

# Meme Generation Settings
MAX_MEME_GENERATION_ATTEMPTS=3
MEME_STORAGE_PATH=meme_storage
ALLOWED_MEME_FORMATS=jpg,png,gif

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Model Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
DEFAULT_IMAGE_MODEL=dall-e-3 